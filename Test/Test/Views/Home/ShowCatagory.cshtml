@model IEnumerable<Test.Models.CatagoryModel.Catagory>

@{
    ViewBag.Title = "ShowCatagory";
}

<h2>ShowCatagory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "AddCatagory", new { id=item.Id, item.Code, item.Name }) |  @*button text then ,method*@
      
            @Html.ActionLink("Delete", "DeleteCatagory", new { id=item.Id })
        </td>
    </tr>
}

</table>
